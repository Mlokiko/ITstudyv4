@model ITstudyv4.ViewModels.PaginatedListVM<Categories>
@{
    ViewData["Title"] = "Wszystkie kategorie";
}

<h1 class="text-center bg-dark text-white p-2 mb-0 rounded-top">Wszystkie Kategorie</h1>
<table class="table table-striped mt-0 table-hover">
    <thead class="table-dark">
        <tr>
            <th>Nazwa</th>
            <th>Opis</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Items)
        {
            <tr>
                <td>
                    <a asp-controller="Threads" asp-action="ShowThreadsInCategory" asp-route-categoryId="@category.Id" style="font-weight: bold; text-decoration: none;">
                        @category.Name
                    </a>
                </td>
                <td>@category.Description</td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination align-items-center">
    @if (Model.HasPreviousPage)
    {
        <a href="@Url.Action("ShowAllCategories", new { pageNumber = Model.CurrentPage - 1, pageSize = Model.PageSize })" class="btn btn-primary m-1">Poprzednia</a>
    }
    <span class="mx-2">Strona @Model.CurrentPage z @Model.TotalPages</span>
    @if (Model.HasNextPage)
    {
        <a href="@Url.Action("ShowAllCategories", new { pageNumber = Model.CurrentPage + 1, pageSize = Model.PageSize })" class="btn btn-primary m-1">Następna</a>
    }
</div>

