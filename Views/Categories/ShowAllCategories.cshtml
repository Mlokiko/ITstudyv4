@using ITstudyv4.ViewModels
@* @model CategoriesVM *@
@model IEnumerable<Categories>

@{
    ViewData["Title"] = "ShowAllCategories";
}

<h1>Wszystkie Kategorie</h1>
<table border="1">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nazwa</th>
            <th>Opis</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.Description</td>
            </tr>
        }
    </tbody>
</table>