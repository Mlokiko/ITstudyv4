@model ITstudyv4.ViewModels.PaginatedListVM<Categories>
@{
    ViewData["Title"] = "Wszystkie kategorie";
}

<h1>Wszystkie Kategorie</h1>
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Nazwa</th>
            <th>Opis</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Items)
        {
            <tr>
                <td>
                    <a asp-controller="Threads" asp-action="ShowThreadsInCategory" asp-route-categoryId="@category.Id">
                        @category.Name
                    </a>
                </td>
                <td>@category.Description</td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination">
     @if (Model.HasPreviousPage)
     {
         <a href="@Url.Action("ShowAllCategories", new { pageNumber = Model.CurrentPage - 1, pageSize = Model.PageSize })" class="btn btn-primary m-1">Poprzednia</a>
     } 
     <span>Strona @Model.CurrentPage z @Model.TotalPages</span> 
     @if (Model.HasNextPage) 
     { 
         <a href="@Url.Action("ShowAllCategories", new { pageNumber = Model.CurrentPage + 1, pageSize = Model.PageSize })" class="btn btn-primary m-1">Następna</a>
     } 
 </div>

