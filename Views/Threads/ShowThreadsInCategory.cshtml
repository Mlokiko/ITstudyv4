@using System.Security.Claims
@using ITstudyv4.ViewModels
@model PaginatedListVM<Threads>

@{
    ViewData["Title"] = "Wątki";
}

<div id="thread-title-card">
    <h1>@ViewBag.CategoryName</h1>
    <p>@ViewBag.Description</p>
</div>

<span class="add-btn">
    <a asp-action="AddNewThread" asp-route-categoryId="@ViewBag.CategoryId" class="btn btn-primary">Dodaj nowy temat</a>
</span>

<div class="threads-container">
    @foreach (var thread in Model.Items)
    {
        <div class="thread-container">
            <div class="thread-content">
                <p>
                    <a asp-controller="Posts" asp-action="ShowAllPosts" asp-route-threadId="@thread.Id">
                        @thread.Title
                    </a>
                </p>
                <p>Przez @thread.User?.UserName, @thread.CreatedAt.ToShortDateString()</p>
            </div>

            <div class="thread-info">
                <td>@thread.Views wyświetleń</td>
            </div>

            <div class="thread-options">
                @if (thread.UserId == User.FindFirstValue(ClaimTypes.NameIdentifier) || User.IsInRole("Admin") || User.IsInRole("Moderator"))
                {
                    <td><a asp-controller="Threads" asp-action="EditThread" asp-route-id="@thread.Id">Edytuj temat</a></td>
                    <td><a asp-controller="Threads" asp-action="DeleteThread" asp-route-id="@thread.Id">Usuń temat</a></td>
                }
            </div>
        </div>
    }
</div>

<div class="pagination">
    @if (Model.HasPreviousPage)
    {
        <a href="@Url.Action("ShowThreadsInCategory", new { categoryId = ViewBag.CategoryId, pageNumber = Model.CurrentPage - 1, pageSize = Model.PageSize })" class="btn btn-primary m-1">Poprzednia</a>
    }
    <span>Strona @Model.CurrentPage z @Model.TotalPages</span>
    @if (Model.HasNextPage)
    {
        <a href="@Url.Action("ShowThreadsInCategory", new {  categoryId = ViewBag.CategoryId, pageNumber = Model.CurrentPage + 1, pageSize = Model.PageSize })" class="btn btn-primary m-1">Następna</a>
    }
</div>




