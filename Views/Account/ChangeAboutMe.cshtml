@using ITstudyv4.ViewModels
@model UserWithRolesVM

@{
    ViewData["Title"] = "Edycja 'O sobie'";
}

<h2 class="text-center text-info">Edycja "O sobie"</h2>

<form method="post">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.UserId)

    <div class="form-group">
        <label for="Name">Nazwa</label>
        @Html.EditorFor(model => model.Bio, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Bio, "", new { @class = "text-danger" })
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Zapisz zmianę</button>
    <a href="@Url.Action("ManageAccount", "Account")" class="btn btn-secondary">Anuluj</a>
</form>