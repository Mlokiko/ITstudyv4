@using ITstudyv4.ViewModels
@model IEnumerable<UserWithRolesVM>

@{ViewData["Title"] = "Wszyscy użytkownicy";}

<h2 class="text-center text-info">Wszyscy użytkownicy</h2>
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Profilowe</th>
            <th>Nazwa użytkownika</th>
            <th>Email</th>
            <th>Data dołączenia</th>
            <th>Ranga</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>
                        @if (!string.IsNullOrEmpty(@user.ProfilePictureURL))
                        {
                            @* <img src="@user.ProfilePictureURL" alt="Zdjęcie profilowe" class="img-thumbnail align-items-center rounded-circle" style="max-width: 50px;" /> *@
                            <img src="@user.ProfilePictureURL" alt="Zdjęcie profilowe" class="img-thumbnail align-items-center rounded-circle" style="width: 50px; height: 50px; object-fit:cover;" />
                        }
                        else
                        {
                            <p>Nie ustawiono zdjęcia profilowego.</p>
                        }
                </td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.JoinDate</td>
                <td>@user.Role</td>
                <td>
                    <a href="@Url.Action("EditUser", "Admin", new { id = user.UserId })" class="btn btn-warning">Moderuj</a>
                    <a href="@Url.Action("DeleteUser", "Admin", new { id = user.UserId })" class="btn btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>